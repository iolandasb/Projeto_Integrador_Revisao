<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/bigMargin"
        android:layout_height="@dimen/bigMargin"
        android:background="@drawable/ic_exit"
        android:layout_marginStart="300dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="@dimen/vBigMargin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSystemFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/failed"
        android:layout_marginTop="@dimen/bigMargin"
        app:layout_constraintEnd_toEndOf="@+id/txtTryAgainMsg"
        app:layout_constraintStart_toStartOf="@+id/txtTryAgainMsg"
        app:layout_constraintTop_toBottomOf="@+id/imgConnection"
        style="@style/StandardTitle" />

    <ImageView
        android:id="@+id/imgConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_warning" />

    <TextView
        android:id="@+id/txtTryAgainMsg"
        android:layout_width="372dp"
        android:layout_height="41dp"
        android:text="@string/try_again_msg"
        android:layout_marginStart="30dp"
        android:layout_marginTop="@dimen/vBigMargin"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSystemFailed"
        style="@style/StandardText" />

    <TextView
        android:id="@+id/txt_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTryAgainMsg"
        app:layout_constraintVertical_bias="0.286"
        style="@style/Error"/>

    <ImageView
        android:id="@+id/imgRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_try_again"
        app:layout_constraintVertical_bias="0.232"
        app:srcCompat="@drawable/ic_green_line" />

</androidx.constraintlayout.widget.ConstraintLayout>