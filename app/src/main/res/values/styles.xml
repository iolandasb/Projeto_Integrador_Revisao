<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonTry">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/greenPrimaryColor</item>
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/lineHeight</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/vSmallMargin</item>
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingLeft">@dimen/smallMargin</item>
        <item name="android:paddingRight">@dimen/smallMargin</item>
    </style>

    <style name="Cast">
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ChipColors" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@drawable/chip_color_text</item>
        <item name="chipBackgroundColor">@drawable/chip_color</item>
    </style>

    <style name="DetailedMovieTitle">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/movieTextColor</item>
        <item name="android:textSize">@dimen/vBigMargin</item>
        <item name="android:textFontWeight" tools:targetApi="p">900</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/lineHeight</item>
    </style>

    <style name="Error">
        <item name="android:text">@string/try_again</item>
        <item name="android:textSize">@dimen/bigMargin</item>
        <item name="android:textColor">@color/greenPrimaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoMovieDetailsText">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/margin</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
    </style>

    <style name="LabelRatingCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textColor">@color/movieTextColor</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PercentText">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight" tools:targetApi="p">22dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">@dimen/lineHeight</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="Tabs">
        <item name="android:textColor">@color/searchColor</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/searchColor</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:textColor">@color/tab</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitlesInfoDetail">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/movieTextColor</item>
        <item name="android:textSize">@dimen/bigMargin</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">45dp</item>
    </style>

    <style name="RatingText">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight" tools:targetApi="p">14dp</item>
    </style>

    <style name="StandardText">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/bigMargin</item>
    </style>

    <style name="StandardTitle">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:fontStyle" tools:targetApi="o">normal</item>
        <item name="android:textColor">@color/searchColor</item>
        <item name="android:textSize">@dimen/bigTextSize</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight" tools:targetApi="p">@dimen/lineHeight</item>
    </style>

</resources>